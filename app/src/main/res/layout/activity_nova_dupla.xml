<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editDupla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome Dupla"
        android:inputType="textPersonName" />

    <EditText
        android:layout_gravity="left"
        android:id="@+id/editPontos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pontos"
        android:inputType="number" />
    <EditText
        android:layout_gravity="right"
        android:id="@+id/editVitorias"
        android:inputType="number"
        android:hint="Numero de Vitorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonSalvarDupla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0887dc"
        android:text="Salvar Dupla" />

</LinearLayout>